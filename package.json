{
  "name": "workshop",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "package:x64": "npx @electron/packager . Workshop --platform=win32 --arch=x64 --out=dist --overwrite",
    "package:ia32": "npx @electron/packager . Workshop --platform=win32 --arch=ia32 --out=dist --overwrite",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.workshop.id",
    "productName": "Workshop",
    "directories": {
      "output": "dist/build"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json",
      "google_credentials.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "electron-log": "^5.1.5",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "googleapis": "^140.0.1"
  },
  "engine": {
    "node": "20"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.3",
    "electron": "^30.1.2",
    "electron-builder": "^24.13.3"
  }
}
