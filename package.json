{
  "name": "montage-video",
  "version": "1.0.0",
  "author": "Mathis Gasparotto <mathis.gasparotto@hotmail.com>",
  "license": "ISC",
  "description": "App for generating video montages",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package:win:x64": "npx @electron/packager . montage-video --platform=win32 --arch=x64 --out=dist --overwrite",
    "package:win:ia32": "npx @electron/packager . montage-video --platform=win32 --arch=ia32 --out=dist --overwrite",
    "build": "electron-builder",
    "build:win:x64": "electron-builder build --win --x64",
    "build:win:ia32": "electron-builder build --win --ia32",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.montage-video.id",
    "productName": "Montage Video",
    "directories": {
      "output": "dist/build"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json",
      "google_credentials.json",
      "main.js"
    ],
    "extraResources": [
      "src/assets/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "electron-log": "^5.1.5",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "googleapis": "^140.0.1",
    "os": "^0.1.2"
  },
  "engine": {
    "node": "20"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.3",
    "electron": "^30.1.2",
    "electron-builder": "^24.13.3"
  }
}
